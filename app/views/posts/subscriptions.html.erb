<% if @posts.empty? %>
  <p class="info">Нечего показывать :(</p>
<% else %>
  <section class="gallery feed-gallery">
    <div class="gallery__wrapper">
      <ul class="card__list">
        <% @posts.each do |post| %>
          <li class="card__item" style="-webkit-transform : rotate(<%= rand(-10..10) %>deg); z-index: <%= rand(1..2)%>;">
            <div class="card__image-wrapper">
              <%= link_to post_path(post), class:"post__show-link link" do %>
                <%= image_tag post.image_url, width: "400px", class: "card__image image"%>
              <% end %>
            </div>
            <div class="card__caption"><%= link_to post.caption, post_path(post), class: "post__show-link link" %></div>
            <div class="card__user"><%= link_to post.user.name, post.user, class: "user__show-link link"%></div>
            <div class="card__time"><%= localize(post.created_at, :format => :long) %></div>
            <div class="card__likes-count"><%= post.likes_count %></div>
          </li>
        <% end %>
      </ul>
    </div>
  </section>
<% end %>