<h1>Posts</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Image</th>
    <th>Caption</th>
    <th>User</th>
    <th>Created_at</th>
    <th>Updated_at</th>
    <th>Actions</th>
  </tr>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= image_tag post.image_url, width: "400px" %></td>
        <td><%= post.caption %></td>
        <td><%= post.user.name %></td>
        <td><%= post.created_at %></td>
        <td><%= post.updated_at %></td>
        <td>
          <%= link_to "Show", post_path(post)%>
          <%= link_to "Edit", edit_post_path(post)%>
          <%= link_to 'Destroy', post_path(post), data: { "turbo-method": :delete, confirm: 'Вы уверены?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>