<div class="post__wrapper">
  <%= image_tag @post.image_url %>
  <%= @post.caption %>
  <%= @post.user.name %>
  <%= @post.created_at %>
  <%= @like = @post.likes.detect {|u| u["user_id"] == current_user.id }%>
  <% if @like %>
    <%= render 'unlike', like: @like %>
  <% else %>
    <%= render 'like', like: Like.new %>
  <% end %>

  <%= @post.likes_count %>
</div>
<%= link_to "Edit", edit_post_path(@post)%>
<%= link_to 'Destroy', post_path(@post), data: { "turbo-method": :delete, confirm: 'Вы уверены?' } %>
<h2>Комментарии:</h2>
<div class="comments__wrapper">
  <%= @post.comments.each do |comment|%>
    <%= comment.text %>
    <%= comment.created_at %>
    <%= comment.user.name %>
  <% end %>
</div>
<h2>Комментировать:</h2>
<%= form_with model: @post.comments.build, url: [@post, @post.comments.build] do |f| %>
  <div>
    <%= f.label :text %>
    <%= f.text_field :text %>
  </div>
  <%= f.submit %>
<% end %>
